{
  "name": "media-video-maker",
  "version": "0.2.1",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:media": "node dist/media-server.js",
    "start:mcp": "node dist/server/mcp-server.js",
    "dev": "ts-node --esm src/index.ts",
    "dev:media": "ts-node --esm src/media-server.ts",
    "dev:mcp": "ts-node --esm src/server/mcp-server.ts",
    "check": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "execa": "^8.0.1",
    "express": "^4.19.2",
    "form-data": "^4.0.0",
    "fs-extra": "^11.2.0",
    "mime-types": "^2.1.35",
    "pureimage": "^0.4.18",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.5.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
